<!--index.wxml-->
<view class="container">
  <text>推荐菜品</text>
  <view class="button-sp-area">
    <view class="one-line" wx:for='{{recommendation}}' wx:key='property'> 
      <button class='weui-btn btn-width' type='default' plain="true">{{item}}</button>
    </view>
  </view>
</view>
<view class="page__bd page__bd_spacing">
  <view class="kind-list">
    <block wx:for="{{list}}" wx:key="id">
      <view class="kind-list__item">
        <view id="{{item.id}}" class="weui-flex kind-list__item-hd {{item.open ? 'kind-list__item-hd_show' : ''}}" bindtap="kindToggle">
          <view class="weui-flex__item">{{item.name}}</view>
        </view>
        <view class="kind-list__item-bd {{item.open ? 'kind-list__item-bd_show' : ''}}">
          <view class="weui-cells {{item.open ? 'weui-cells_show' : ''}}">
            <block wx:for="{{item.pages}}" wx:for-item="page" wx:key="*this">
              <navigator url='../ingredients/ingredients?title={{page.name}}&intro={{page.intro}}' open-type='navigate' class="weui-cell weui-cell_access">
               <view class="weui-cell__bd">{{page.name}}</view>
               <!-- <navigator url = '../timer/timer?name={{page.name}}&time={{page.time}}' open-type='switchTab'>⏲</navigator> -->
                <button data-name="{{page.name}}" data-time="{{page.time}}" bindtap='navigateTotimer'>⏲</button> 
               <view class="weui-cell__ft weui-cell__ft_in-access"></view>
              </navigator>
            </block>
          </view>
        </view>
      </view>
    </block>
  </view>
</view>
